<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="pruebaname"
            android:id="@+id/nomentrenamiento"/>
        <ImageButton
            android:src="@drawable/baseline_edit_note_24"
            android:id="@+id/editarentrenamiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:src="@drawable/baseline_delete_24"
            android:id="@+id/eliminarentrenamiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:src="@drawable/baseline_check_box_outline_blank_24"
            android:text="ini"
            android:id="@+id/inicloseentrenamiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>